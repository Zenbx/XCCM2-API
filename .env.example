# Database
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority"

# JWT Configuration
JWT_SECRET="votre_secret_super_securise_changez_moi_en_production_minimum_32_caracteres"
JWT_EXPIRES_IN="7d"

# Application
NODE_ENV="development"
NEXT_PUBLIC_API_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Email (SMTP + Nodemailer)
# Compatible avec tous les services SMTP: Gmail, Mailtrap, Mailgun, etc.
# 
# Exemples:
# - Gmail: smtp.gmail.com, port 587, utiliser "App Password"
# - Mailtrap: smtp.mailtrap.io, port 587 ou 25
# - Mailgun: smtp.mailgun.org, port 587
# - Custom SMTP: votre serveur SMTP, port 587 ou 465
#
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT="587"
SMTP_USER="your_smtp_user"
SMTP_PASSWORD="your_smtp_password"
FROM_EMAIL="noreply@example.com"
CONTACT_EMAIL="contact@example.com"